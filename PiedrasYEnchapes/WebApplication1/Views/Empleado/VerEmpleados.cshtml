@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}
@model List<WebApplication1.Models.Empleado>

<!-- HERO GENERAL -->
<div class="hero_general">
    <div class="bg-box">
        <img src="~/StaticFiles/images/navGeneral.jpg" />
    </div>
</div>

<!-- empleados section -->
<section class="food_section layout_padding-bottom layout_padding-top">


    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-dark fw-bold">Gestión de Empleados</h3>
            <a href="@Url.Action("AgregarEmpleado", "Empleado")" class="btn btn-success shadow-sm">
                <i class="material-symbols-rounded align-middle">Agregar empleado</i> 
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre completo</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NombreCompleto</td>
                                    <td>@item.Correo</td>
                                    <td>@item.Telefono</td>
                                    <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ActualizarEmpleado", "Empleado", new { q = item.IdEmpleado })" class="btn btn-sm btn-primary shadow-sm me-2">
                                            <i class="material-symbols-rounded align-middle">edit</i>
                                        </a>
                                        <div class="form-check form-switch d-inline-block">
                                            <input class="form-check-input" type="checkbox" @(item.Estado ? "checked" : "")
                                                   onclick="location.href='@Url.Action("CambiarEstadoEmpleado", "Empleado", new { q = item.IdEmpleado })'">
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end empleados section -->

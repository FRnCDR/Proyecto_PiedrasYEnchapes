@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}
@model WebApplication1.Models.Empleado

<!-- HERO GENERAL -->
<div class="hero_general">
    <div class="bg-box">
        <img src="~/StaticFiles/images/navGeneral.jpg" />
    </div>
</div>

<!-- empleados section -->
<section class="food_section layout_padding-bottom layout_padding-top">
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-sm border-0">
                    <div class="card-header pb-0 bg-transparent">
                        <h4 class="font-weight-bolder mb-1">Agregar empleado</h4>
                        <p class="text-sm text-muted mb-0">
                            Registra un nuevo empleado en el sistema.
                        </p>
                    </div>

                    <div class="card-body pt-3">
                        @using (Html.BeginForm("AgregarEmpleado", "Empleado", FormMethod.Post, new { @id = "FormAgregarEmpleado" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                            <!-- Nombre -->
                            <div class="mb-3">
                                <label for="Nombre" class="form-label">Nombre</label>
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                            </div>

                            <!-- Apellidos -->
                            <div class="mb-3">
                                <label for="Apellidos" class="form-label">Apellidos</label>
                                @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Apellidos, "", new { @class = "text-danger" })
                            </div>

                            <!-- Correo -->
                            <div class="mb-3">
                                <label for="Correo" class="form-label">Correo electrónico</label>
                                @Html.TextBoxFor(x => x.Correo, new { @class = "form-control", type = "email" })
                                @Html.ValidationMessageFor(x => x.Correo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Teléfono -->
                            <div class="mb-3">
                                <label for="Telefono" class="form-label">Teléfono</label>
                                @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Telefono, "", new { @class = "text-danger" })
                            </div>

                            <!-- Estado (Activo o Inactivo) -->
                            <div class="form-check mb-3">
                                @Html.CheckBoxFor(x => x.Estado, new { @class = "form-check-input" })
                                <label class="form-check-label" for="Estado">Empleado Activo</label>
                            </div>

                            <!-- Botón de guardar -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-success w-100 mb-0">Guardar empleado</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end empleados section -->

@{
    ViewBag.Title = "Inventario";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}
@model List<WebApplication1.Models.Producto>

<!-- HERO GENERAL -->
<div class="hero_general">
    <div class="bg-box">
        <img src="~/StaticFiles/images/navGeneral.jpg" />
    </div>
</div>

<h2>Inventario de Productos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Stock</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th>Categoría ID</th> <!-- Agregar columna para CategoriaID -->
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Stock</td>
                <td>@producto.Precio</td>
                <td>
                    @if (!string.IsNullOrEmpty(producto.Imagen))
                    {
                        <img src="@Url.Content("~/" + producto.Imagen)" alt="@producto.Nombre" width="50" />
                    }
                </td>
                <td>@producto.CategoriaID</td> <!-- Mostrar el CategoriaID -->

                <td>
                    <a href="@Url.Action("ActualizarProducto", "Inventario", new { q = producto.ProductoID })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("EliminarProducto", "Inventario", new { q = producto.ProductoID })" class="btn btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este producto?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AgregarProducto", "Inventario")" class="btn btn-dark">Agregar Nuevo Producto</a>


<a href="@Url.Action("VerCategorias", "Categoria")" class="btn btn-success">Ver lista de categorias</a>



@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
    ViewBag.Title = "Login";
}

<div class="hero_area">

    <!-- Fondo -->
    <div class="bg-box">
        <img src="~/StaticFiles/images/fondoLogin.png" />
    </div>

    <!-- LOGIN CENTRADO -->
    <section class="login_section layout_padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">

                    <div class="login_box p-4" style="background: #ecebe6; border-radius: 10px; box-shadow: 0 4px 20px rgba(0,0,0,0.2);">

                        <div class="text-center mb-4">
                            <img src="~/StaticFiles/images/logoPiedras.jpg" style="width: 120px;" />
                            <h3 class="mt-3">Bienvenido</h3>
                            <p>Inicia sesión para continuar</p>
                        </div>

                        <form action="/Login" method="post">

                            <div class="form-group">
                                <input type="email" class="form-control"
                                       name="correo" placeholder="Correo" required />
                            </div>

                            <div class="form-group mt-3">
                                <input type="password" class="form-control"
                                       name="password" placeholder="Contraseña" required />
                            </div>

                            <button type="submit" class="btn btn-primary btn-block mt-4">
                                Iniciar sesión
                            </button>

                            <div class="d-flex justify-content-between mt-3">
                                <label class="text-muted">
                                    <input type="checkbox" /> Mantener sesión activa
                                </label>
                                <a href="#" class="auth-link text-dark">¿Olvidó su contraseña?</a>
                            </div>

                            <div class="text-center mt-4">
                                ¿No tienes cuenta?
                                <a href="#" class="text-primary">Crear cuenta</a>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

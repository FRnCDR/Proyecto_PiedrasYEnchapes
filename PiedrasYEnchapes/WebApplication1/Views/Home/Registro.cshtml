@model WebApplication1.Models.Usuario

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="login-page">

    <!-- Fondo + overlay -->
    <div class="login-bg" style="background-image:url('@Url.Content("~/StaticFiles/images/fondoLogin.png")');"></div>
    <div class="login-overlay"></div>

    <section class="login-wrapper">
        <div class="login-card">

            <div class="login-brand">
                <img src="~/StaticFiles/images/logoPiedras.jpg" alt="Logo" class="login-logo" />
                <h1 class="login-title">Crear cuenta</h1>
                <p class="login-subtitle">Registrate para comenzar a cotizar con nosotros</p>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger" style="margin-bottom: 15px; border-radius:12px;">
                    <i class="fa fa-exclamation-triangle" style="margin-right:8px;"></i>
                    @ViewBag.Mensaje
                </div>
            }


            @using (Html.BeginForm("Registro", "Home", FormMethod.Post, new { @class = "register-form" }))
            {
                <!-- Identificación -->
                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-id-card"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Identificacion, new
                    {
                        @class = "form-control input-modern",
                        placeholder = "Identificación",
                    })
                </div>

                <!-- Nombre -->
                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Nombre, new
                    {
                        @class = "form-control input-modern",
                        placeholder = "Nombre completo",
                        @readOnly = "true",
                    })
                </div>

                <!-- Correo -->
                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.CorreoElectronico, new
                    {
                        @class = "form-control input-modern",
                        placeholder = "Correo electrónico",
                        type = "email",
                    })
                </div>

                <!-- Contraseña -->
                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.Contrasenna, new
                    {
                        @class = "form-control input-modern",
                        placeholder = "Contraseña",
                    })
                </div>

                <button type="submit" class="btn login-btn w-100">
                    Registrarme
                </button>
            }

            <div class="login-divider">
                <span>o</span>
            </div>

            <div class="login-footer">
                <span>¿Ya tienes cuenta?</span>
                <a href="@Url.Action("Login", "Home")" class="signup">Inicia sesión</a>
            </div>

        </div>
    </section>
</div>

@section Scripts {
    <script>
        const urlConsultarCedula = '@Url.Action("ConsultarCedula", "Home")';
    </script>

    <!-- Enlazamos el archivo JS externo -->
   
    <script src="~/StaticFiles/js/registro.js"></script>
}

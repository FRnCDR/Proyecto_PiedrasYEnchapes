@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="login-page">

    <!-- Fondo + overlay -->
    <div class="login-bg" style="background-image:url('@Url.Content("~/StaticFiles/images/fondoLogin.png")');"></div>
    <div class="login-overlay"></div>

    <section class="login-wrapper">
        <div class="login-card">

            <div class="login-brand">
                <img src="~/StaticFiles/images/logoPiedras.jpg" alt="Logo" class="login-logo" />
                <h1 class="login-title">Crear cuenta</h1>
                <p class="login-subtitle">Registrate para comenzar a cotizar con nosotros</p>
            </div>

            <form action="/Registro" method="post" class="login-form">

                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-user"></i>
                    </span>
                    <input type="text"
                           class="form-control input-modern"
                           name="nombreUsuario"
                           placeholder="Nombre de usuario"
                           required />
                </div>

                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-envelope"></i>
                    </span>
                    <input type="email"
                           class="form-control input-modern"
                           name="correo"
                           placeholder="Correo electrónico"
                           required />
                </div>

                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password"
                           class="form-control input-modern"
                           name="password"
                           placeholder="Contraseña"
                           required />
                </div>

                

                <button type="submit" class="btn login-btn w-100">
                    Registrarme
                </button>

                <div class="login-divider">
                    <span>o</span>
                </div>

                <div class="login-footer">
                    <span>¿Ya tienes cuenta?</span>
                    <a href="@Url.Action("Login", "Home")" class="signup">Inicia sesión</a>
                </div>

            </form>
        </div>
    </section>
</div>

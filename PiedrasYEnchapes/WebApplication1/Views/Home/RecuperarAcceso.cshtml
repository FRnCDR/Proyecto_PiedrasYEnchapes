@model WebApplication1.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="login-page">

    <!-- Fondo + overlay -->
    <div class="login-bg" style="background-image:url('@Url.Content("~/StaticFiles/images/fondoLogin.png")');"></div>
    <div class="login-overlay"></div>

    <section class="login-wrapper">
        <div class="login-card">

            <div class="login-brand">
                <img src="~/StaticFiles/images/logoPiedras.jpg" alt="Logo" class="login-logo" />
                <h1 class="login-title">Recuperar acceso</h1>
                <p class="login-subtitle">Ingresá tu correo y te enviaremos un código de verificación</p>
            </div>


            @using (Html.BeginForm("RecuperarAcceso", "Home", FormMethod.Post, new { @class = "forget-form" }))
            {

            

                <div class="input-group-modern">
                    <span class="input-icon">
                        <i class="fa fa-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control input-modern", 
                     placeholder = "Correo electrónico" })
                </div>

                <button type="submit" class="btn login-btn w-100">
                    Enviar código
                </button>
            }
                <div class="login-divider">
                    <span>o</span>
                </div>

                <div class="login-footer">
                    <span>¿Ya recordaste tu contraseña?</span>
                    <a href="@Url.Action("Login", "Home")" class="signup">Volver a iniciar sesión</a>
                </div>

        </div>
    </section>
</div>

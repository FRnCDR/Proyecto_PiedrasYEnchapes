@* Views/Shared/_LayoutExterno.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Piedras Decorativas</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/StaticFiles/css/bootstrap.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Estilos generales -->
    <link rel="stylesheet" href="~/StaticFiles/css/style.css" />
    <link rel="stylesheet" href="~/StaticFiles/css/responsive.css" />
    <link rel="stylesheet" href="~/StaticFiles/css/login.css" />

</head>
<body style="background:#f5f5f5;">

    @RenderBody()

    <!-- JS -->
    <script src="~/StaticFiles/js/jquery-3.4.1.min.js"></script>
    <script src="~/StaticFiles/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

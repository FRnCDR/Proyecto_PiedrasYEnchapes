<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title - Piedras Decorativas</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/StaticFiles/css/bootstrap.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/StaticFiles/css/responsive.css" />
    <link rel="stylesheet" href="~/StaticFiles/css/style.css" />
    <link href="~/StaticFiles/css/index-moderno.css" rel="stylesheet" />
    <link href="~/StaticFiles/css/catalogo-minimal.css" rel="stylesheet" />
    <link href="~/StaticFiles/css/catalogo-productos.css" rel="stylesheet" />
    <link href="~/StaticFiles/css/layout-modern.css" rel="stylesheet" />
    <link href="~/StaticFiles/css/about-modern.css" rel="stylesheet" />

</head>
<body>

    <!-- header section starts -->
    <header class="header_section">
        <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container navbar-clean">
                <!-- Marca -->
                <a class="navbar-brand brand-clean" href="@Url.Action("Index", "Home")">
                    <span>Piedras decorativas</span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span style="color:white; font-size:24px;">☰</span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <!-- TODO en una sola fila -->
                    <ul class="navbar-nav ml-auto nav-row">

                        <!-- Productos -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("VerProductos", "Productos")">Productos</a>
                        </li>

                        <!-- Sobre nosotros -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("VerNosotros", "SobreNosotros")">Sobre Nosotros</a>
                        </li>

                        <!-- Cotizar -->
                        <li class="nav-item nav-btn">
                            <a href="#" class="btn btn-cta">Cotizar</a>
                        </li>

                        <!-- Carrito -->
                        <li class="nav-item">
                            <a class="icon-btn" href="#" title="Carrito">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </li>

                        <!-- Usuario (dropdown) -->
                        <li class="nav-item dropdown">
                            <a class="icon-btn dropdown-toggle"
                               href="#"
                               id="userDropdown"
                               role="button"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false"
                               title="Mi cuenta">
                                <i class="fa fa-user"></i>
                            </a>

                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("Perfil", "Home")">
                                    <i class="fa fa-user-circle mr-2"></i> Mi perfil
                                </a>

                                <a class="dropdown-item" href="@Url.Action("MisCotizaciones", "Home")">
                                    <i class="fa fa-file-text-o mr-2"></i> Mis cotizaciones
                                </a>

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item" href="@Url.Action("CerrarSesion","Home")">
                                    <i class="fa fa-sign-out mr-2"></i> Cerrar sesión
                                </a>
                            </div>
                        </li>

                        <!-- Administración -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-cog mr-1"></i> Administración
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="adminDropdown">
                                <a class="dropdown-item" href="@Url.Action("VerEmpleados", "Empleado")">
                                    <i class="fa fa-users mr-2"></i> Empleados
                                </a>
                                <a class="dropdown-item" href="@Url.Action("VerProveedores", "Proveedor")">
                                    <i class="fa fa-truck mr-2"></i> Proveedores
                                </a>
                                <a class="dropdown-item" href="@Url.Action("VerInventario", "Inventario")">
                                    <i class="fa fa-archive mr-2"></i> Inventario
                                </a>
                            </div>
                        </li>




                    </ul>
                </div>
            </nav>


        </div>
    </header>
  
    @RenderBody()

    
    <footer class="footer_modern">
        <div class="container">

            <!-- Top -->
            <div class="footer_top">
                <div class="row">

                    <!-- Col 1 -->
                    <div class="col-lg-4 col-md-6 footer_block">
                        <h4 class="footer_title">¡Contactanos!</h4>

                        <div class="footer_links">
                            <a href="#" class="footer_item">
                                <span class="footer_icon"><i class="fa fa-map-marker"></i></span>
                                <span>Ubicanos</span>
                            </a>

                            <a href="tel:+50688843892" class="footer_item">
                                <span class="footer_icon"><i class="fa fa-phone"></i></span>
                                <span>+506 8884 3892</span>
                            </a>

                            <a href="mailto:piedrasyenchapes@gmail.com" class="footer_item">
                                <span class="footer_icon"><i class="fa fa-envelope"></i></span>
                                <span>piedrasyenchapes@gmail.com</span>
                            </a>
                        </div>
                    </div>

                    <!-- Col 2 -->
                    <div class="col-lg-4 col-md-6 footer_block footer_center">
                        <a href="#" class="footer_brand">Gustavo Fallas Piedras</a>
                        <p class="footer_text">
                            Piedras decorativas y enchapes naturales para interiores y exteriores.
                            Calidad, estilo y durabilidad en cada pieza.
                        </p>

                        <div class="footer_social_modern">
                            <a href="#" class="social_chip" aria-label="Facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="social_chip" aria-label="Instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" class="social_chip" aria-label="WhatsApp"><i class="fa fa-whatsapp"></i></a>
                        </div>
                    </div>

                    <!-- Col 3 -->
                    <div class="col-lg-4 col-md-12 footer_block">
                        <h4 class="footer_title">Horario</h4>

                        <div class="footer_hours">
                            <div class="hours_row">
                                <span class="hours_day">Lunes - Domingo</span>
                                <span class="hours_time">10:00 AM – 10:00 PM</span>
                            </div>
                        </div>

                        <a href="#" class="footer_cta">
                            Cotizar ahora <span class="cta_arrow">→</span>
                        </a>
                    </div>

                </div>
            </div>

            <!-- Bottom -->
            <div class="footer_bottom">
                <div class="footer_bottom_left">
                    © <span id="displayYear"></span> Gustavo Fallas Piedras. Todos los derechos reservados.
                </div>

                <div class="footer_bottom_right">
                    <a href="#">Términos</a>
                    <span class="dot">•</span>
                    <a href="#">Privacidad</a>
                </div>
            </div>

        </div>
    </footer>


    <!-- JS -->
    <script src="~/StaticFiles/js/jquery-3.4.1.min.js"></script>
    <script src="~/StaticFiles/js/bootstrap.js"></script>
</body>
</html>
